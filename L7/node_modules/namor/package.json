{
	"name": "namor",
	"version": "2.0.4",
	"description": "A domain-safe name generator",
	"author": "Jason Maurer",
	"license": "MIT",
	"homepage": "https://github.com/jsonmaur/namor#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jsonmaur/namor.git"
	},
	"engines": {
		"node": ">=6"
	},
	"keywords": [
		"name",
		"subdomain",
		"generator",
		"random",
		"url",
		"friendly",
		"manly"
	],
	"files": [
		"assets/",
		"dist/",
		"license",
		"readme.md"
	],
	"main": "dist/index.js",
	"scripts": {
		"deploy": "git subtree push --prefix example heroku master",
		"clean": "rm -rf dist coverage src/_data.ts",
		"prettier": "prettier './**/*.{ts,js,json,yml,md}'",
		"format": "npm run prettier -- --write",
		"format:check": "npm run prettier -- --check",
		"pretest": "npm run build:data",
		"test": "npm run format:check && jest --coverage",
		"coveralls": "cat coverage/lcov.info | coveralls",
		"prebuild": "npm run clean && npm run build:data",
		"build": "tsc",
		"build:data": "ts-node data/build",
		"prepare": "npm run build"
	},
	"dependencies": {
		"crypto-extra": "1.0.1"
	},
	"devDependencies": {
		"@types/glob": "7.1.1",
		"@types/jest": "24.0.23",
		"@types/node": "12.12.7",
		"coveralls": "3.0.7",
		"jest": "24.9.0",
		"prettier": "1.19.1",
		"ts-jest": "24.1.0",
		"ts-node": "8.5.2",
		"typescript": "3.7.2"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"trailingComma": "all",
		"arrowParens": "always"
	},
	"jest": {
		"testEnvironment": "node",
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/_data.ts"
		],
		"coverageReporters": [
			"lcov",
			"text"
		]
	}
}
